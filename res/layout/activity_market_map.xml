<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MapActivity"
    tools:ignore="MergeRootFrame" >
    
   <LinearLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:id="@+id/MainMapLayout"
        android:orientation="vertical"
        
        android:weightSum="66"
        android:background="#FFF0FF90"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
  		android:gravity="center"
        android:layout_weight="33" >

        <Button
            android:id="@+id/OfflineMarketClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:onClick="OfflineMarketClick"
            android:text="OfflineMarket" />

        <Button
            android:id="@+id/OnlineMarketClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:onClick="OnlineMarketClick"
            android:text="OnlineMarket" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
         android:layout_weight="33"  >

        <Button
            android:id="@+id/PremiumStoreClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="PremiumStoreClick"
            android:text="PremiumStore" />

    </LinearLayout>
</LinearLayout>
    
     <LinearLayout
        android:id="@+id/RightMapLayout"
        android:layout_height="match_parent"
       android:layout_width="match_parent"
        android:background="#FF00FF90"
        android:gravity="center_horizontal"     
        android:orientation="vertical">

         <TextView
             android:id="@+id/NameTV"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
</LinearLayout>


